{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "customers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cust_id": { "type": "integer" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "fed_id": { "type": "string" },
          "postal_code": { "type": "string" },
          "state": {
            "type": "string",
            "enum": ["MA", "NH", "RI", "VE", "CN", "NY"]
          },
          "type": {
            "type": "string",
            "enum": ["individual", "business"]
          },

          "individual": {
            "type": "object",
            "properties": {
              "first_name_ind": { "type": "string" },
              "last_name_ind": { "type": "string" },
              "birth_date": {
                "type": "string",
                "format": "date"
              }
            },
            "required": ["first_name_ind", "last_name_ind"]
          },

          "business": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "state_id": { "type": "string" },
              "incorp_date": {
                "type": "string",
                "format": "date"
              },
              "officers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "officer_id": { "type": "integer" },
                    "first_name_off": { "type": "string" },
                    "last_name_off": { "type": "string" },
                    "start_date": {
                      "type": "string",
                      "format": "date"
                    },
                    "end_date": {
                      "type": "string",
                      "format": "date"
                    },
                    "title": {
                      "type": "string",
                      "enum": ["President", "CEO"]
                    }
                  },
                  "required": [
                    "officer_id",
                    "first_name_off",
                    "last_name_off"
                  ]
                }
              }
            },
            "required": ["name", "state_id", "officers"]
          }
        },
        "required": ["cust_id", "fed_id", "type"]
      }
    }
  },
  "required": ["customers"]
}